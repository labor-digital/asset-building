{
  "name": "demo",
  "version": "1.0.0",
  "description": "A demoproject to show how the buildprocess works",
  "main": "index.js",
  "scripts": {
    "build": "labor-asset-building build",
    "watch": "labor-asset-building watch"
  },
  "keywords": [],
  "author": "LABOR GmbH",
  "license": "MIT",
  "devDependencies": {
    "labor-asset-building": "file:..",
    "g8-framework": "file:../../g8-framework",
    "blocks.js": "file:../../blocks.js"
  },
  "labor": {
    "js": [
      {
        "entry": "webroot/js/src/application.js",
        "output": "./webroot/js/bundle.js"
      }
    ],
    "jsCompat": [
      {
        "rule": "(es6)\\.js$",
        "fix": "win=>window"
      }
    ],
    "css": [
      {
        "entry": "./webroot/css/src/backend/backend.sass",
        "output": "webroot/css/backend.css"
      },
      {
        "entry": "webroot/css/src/frontend/frontend.css",
        "output": "./webroot/css/frontend.css"
      }
    ],
    "copy": [
      {
        "from": [
          "assets/a/*",
          "./assets/b/**/b2.png",
          "./assets/**/asset.png"
        ],
        "to": "webroot/assets",
        "ignore": [
          "*.jpg",
          "assets/a/c"
        ]
      }
    ],
    "plugins": [
      "./demoPlugins/DemoPlugin.js",
      "./node_modules/g8-framework/plugins/G8FrameworkPlugin.js",
      "./node_modules/blocks.js/plugins/BlocksPlugin.js"
    ]
  },
  "dependencies": {
    "jquery": "^3.3.1",
    "mustache": "^2.3.1"
  }
}
