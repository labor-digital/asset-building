{
	"name": "demo",
	"version": "1.0.0",
	"description": "A demoproject to show how the buildprocess works",
	"scripts": {
		"build": "assets",
		"watch": "assets dev --watch --verbose",
		"dev": "assets dev --devServer --verbose",
		"analyze": "assets analyze"
	},
	"keywords": [],
	"author": "LABOR GmbH",
	"license": "Apache-2.0",
	"devDependencies": {
		"@labor-digital/asset-building": "file:../.."
	},
	"labor": {
		"apps": [
			{
				"entry": "./frontend/src/app.js",
				"output": "./frontend/dist/bundle.js",
				"minChunkSize": 0,
				"webpackConfig": true
			},
			{
				"entry": "./frontend/src/app.js",
				"output": "./frontend/dist2/bundle.js",
				"publicPath": "/",
				"webpackConfig": true,
				"htmlTemplate": {
					"bodyHtmlSnippet": "<h1>Hello world (App 2)</h1><p>Look in your browser console, to see the js output</p>"
				},
				"watch": true,
				"devServer": false
			},
			{
				"entry": "./frontend/src/app.js",
				"output": "./frontend/dist3/bundle.js",
				"publicPath": "/",
				"htmlTemplate": {
					"bodyHtmlSnippet": "<h1>Hello world (App 3)</h1><p>Look in your browser console, to see the js output</p>"
				},
				"devServer": {
					"host": "localhost",
					"port": 7500
				}
			}
		]
	},
	"dependencies": {}
}
